{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/spa",
  "regions": ["gru1"],
  "functions": {
    "api/**": { "maxDuration": 60, "includeFiles": "dist/server/**", "runtime": "nodejs22.x" },
    "api/index.ts": { "maxDuration": 60, "includeFiles": "dist/server/**", "runtime": "nodejs22.x" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
