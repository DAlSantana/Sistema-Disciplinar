{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/spa",
  "regions": ["gru1"],
  "functions": {
    "api/**": { "runtime": "nodejs20.x", "maxDuration": 60, "includeFiles": "dist/server/**" }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
