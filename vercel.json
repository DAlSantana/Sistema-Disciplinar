{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/spa",
  "regions": ["gru1"],
  "functions": {
    "api/**": {
      "runtime": "nodejs22.x",
      "maxDuration": 60,
      "includeFiles": ["dist/server/**"]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
